<Window x:Class="Client2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client2"
        mc:Ignorable="d"
            Title="MainWindow" Height="400" Width="400">
    <StackPanel>
        <Image Margin="0,10,0,0" x:Name="image" Height="100" Width="100"  Source="/play.png" />
        <Button Margin="35" Height="90" Width="180" FontSize="30" FontWeight="DemiBold">Download</Button>
        <Button Height="90" Width="180" FontSize="30" FontWeight="DemiBold">Send</Button>
    </StackPanel>
</Window>
